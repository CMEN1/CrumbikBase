<div class="section row container" id="contactanos">

  <div class="row">
    <h4 class="black-text center">Registrar Evento</h4>
  </div>
  <div class="row ">
    <form>
  <div class=" input-field col s7">
    <input id="fechaEventoEj" type="date" class="datepicker">
    <label for="fechaEventoEj">Fecha</label>
  </div>

      <div class="input-field col s7 ">
        <i class="material-icons prefix iconnegro">query_builder</i>
